---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Helper to clean IDs to slugs
const cleanId = (id: string) => id.replace(/^.*\//, '').replace(/^\d{4}-\d{2}-\d{2}-/, '');
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body class="blog-index">
    <Header />
    <main>
      <h1>Blog</h1>

      {posts.length === 0 ? (
        <p class="no-posts">No articles yet. Create your first article in <code>src/content/blog/</code></p>
      ) : (
        <ul class="post-list">
          {posts.map((post) => (
            <li>
              <a href={`/${cleanId(post.id)}/`}>
                {post.data.heroImage && (
                  <img
                    src={post.data.heroImage}
                    alt={post.data.heroImageAlt || post.data.title}
                    loading="lazy"
                  />
                )}
                <div class="post-info">
                  <h2>{post.data.title}</h2>
                  <p class="date"><FormattedDate date={post.data.pubDate} /></p>
                  <p class="description">{post.data.description}</p>
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </main>
    <Footer />
  </body>
</html>

<style>
  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .no-posts {
    text-align: center;
    color: rgb(var(--gray));
    font-style: italic;
  }

  .no-posts code {
    background: rgb(var(--gray-light));
    padding: 0.2em 0.4em;
    border-radius: 4px;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-list li a {
    display: flex;
    gap: 1.5rem;
    text-decoration: none;
    color: inherit;
    padding: 1rem;
    border-radius: 12px;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .post-list li a:hover {
    background: rgba(0, 0, 0, 0.05);
    transform: translateX(4px);
  }

  .post-list img {
    width: 200px;
    height: 120px;
    object-fit: cover;
    border-radius: 8px;
    flex-shrink: 0;
  }

  .post-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .post-info h2 {
    margin: 0 0 0.5rem;
    font-size: 1.3rem;
    color: var(--accent);
  }

  .date {
    font-size: 0.9rem;
    color: rgb(var(--gray));
    margin: 0 0 0.5rem;
  }

  .description {
    margin: 0;
    color: rgb(var(--gray-dark));
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (max-width: 600px) {
    .post-list li a {
      flex-direction: column;
    }

    .post-list img {
      width: 100%;
      height: 180px;
    }
  }
</style>
