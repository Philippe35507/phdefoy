---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, SITE_NAME, SITE_URL, SOCIAL_LINKS } from '../consts';

// Schema.org WebSite JSON-LD (TODO: Adapt as needed)
const siteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE_NAME,
  "url": SITE_URL,
  "description": SITE_DESCRIPTION,
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script type="application/ld+json" set:html={JSON.stringify(siteSchema)} />
  </head>

  <body class="page-bg home">
    <Header />
    <main>
      <section class="welcome-container">
        <h1>Welcome to {SITE_NAME}</h1>
        <p class="intro">{SITE_DESCRIPTION}</p>

        <a href="/blog/" class="cta-blog">
          <span class="cta-text">Explore the blog</span>
          <span class="cta-arrow">â†’</span>
        </a>
      </section>

      <section class="blog-section">
        <div class="blog-container">
          <h2>About</h2>
          <p>
            Welcome to this site. You can customize this section
            according to your needs.
          </p>
          <p>
            Edit <code>src/pages/index.astro</code> to customize
            the content of this homepage.
          </p>
        </div>
      </section>

      <style>
        body.page-bg {
          min-height: 100vh;
          background: linear-gradient(135deg, #12141f 0%, #1a1c2b 40%, #23254a 100%);
          margin: 0;
          font-family: var(--font-sans);
        }
        main { padding-top: 0; margin-top: -20px; }

        .blog-section {
          max-width: 900px;
          margin: 2rem auto;
          padding: 0 2rem;
          color: #f8fafc;
        }
        .blog-container {
          background: rgba(30, 41, 59, 0.6);
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.1);
          border-radius: 16px;
          padding: 3rem;
          margin-bottom: 4rem;
          line-height: 1.7;
        }
        .blog-container h2 {
          font-size: 1.5rem;
          color: #60a5fa;
          font-weight: 600;
          margin-top: 0;
          margin-bottom: 1rem;
          border-left: 4px solid #60a5fa;
          padding-left: 1rem;
        }
        .blog-container p { margin-bottom: 1.5rem; color: #cbd5e1; font-size: 1.1rem; }
        .blog-container code {
          background: rgba(0,0,0,0.3);
          padding: 0.2em 0.4em;
          border-radius: 4px;
          font-size: 0.9em;
        }

        .welcome-container {
          max-width: 800px;
          margin: 3rem auto 3rem;
          padding: 0rem 2rem;
          text-align: center;
          color: #f8fafc;
        }
        .welcome-container h1 {
          font-size: clamp(1.75rem, 4vw, 2.5rem);
          color: #f8fafc;
          font-weight: 700;
          letter-spacing: -0.02em;
          margin-top: 4rem;
          margin-bottom: 1rem;
          text-align: center;
        }
        .intro {
          font-size: 1.2rem;
          color: #cbd5e1;
          margin-bottom: 2rem;
        }

        .cta-blog {
          display: inline-flex;
          align-items: center;
          gap: 1rem;
          padding: 1.25rem 2rem;
          background: rgba(30, 41, 59, 0.6);
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.1);
          border-radius: 16px;
          text-decoration: none;
          color: #f8fafc;
          transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .cta-blog:hover {
          transform: translateY(-4px);
          background: rgba(30, 41, 59, 0.8);
          border-color: rgba(96, 165, 250, 0.5);
          box-shadow: 0 12px 20px -5px rgba(0, 0, 0, 0.3);
        }
        .cta-text {
          font-size: 1.2rem;
          font-weight: 600;
        }
        .cta-arrow {
          font-size: 1.5rem;
          color: #60a5fa;
          transition: transform 0.2s;
        }
        .cta-blog:hover .cta-arrow {
          transform: translateX(4px);
        }
      </style>
    </main>

    <Footer />
  </body>
</html>
