---
import type { HTMLAttributes } from 'astro/types';
type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

// normalise le chemin courant pour supporter 'never'
const raw = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const pathname = raw !== '/' ? raw.replace(/\/$/, '') : '/';

// actif si correspond exactement ou si la page courante est un sous-chemin
const isActive =
  href === pathname ||
  (href !== '/' && pathname.startsWith(href + '/')) ||
  (href !== '/' && pathname === href);
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
<style>
  a { display: inline-block; text-decoration: none; }
  a.active { font-weight: bolder; text-decoration: underline; }
</style>
