---
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
const blogPlaceholder = '/images/placeholders/blog-placeholder-about.jpg';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
  title?: string;
  description?: string;
  image?: ImageMetadata | string;
  ogType?: string;
  imageAlt?: string;
}

const {
  title:        metaTitle       = SITE_TITLE,
  description:  metaDescription = SITE_DESCRIPTION,
  image         = blogPlaceholder,
  ogType        = 'website',
  imageAlt,
} = Astro.props as Props;

const imagePath = typeof image === 'string' ? image : image.src;

// Base sûre même en dev (si Astro.site n'est pas défini)
const baseForUrls = Astro.site ?? Astro.url;

// Toujours forcer un slash final
let pathname = Astro.url.pathname;
if (!pathname.endsWith('/')) {
  pathname += '/';
}

// URLs absolues
const canonicalURL = new URL(pathname, baseForUrls).toString();
const imageURL = new URL(imagePath, baseForUrls).toString();

// Texte alternatif dynamique
const altText = imageAlt ?? `Couverture : ${metaTitle}`;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="dns-prefetch" href="//www.googletagmanager.com" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', baseForUrls)} />
<meta name="generator" content={Astro.generator} />

<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={metaDescription} />

<!-- ✅ Canonical -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph -->
<meta property="og:type" content={ogType} />
<meta property="og:title" content={metaTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:alt" content={altText} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content="fr_FR" />
<meta property="og:url" content={canonicalURL} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@phdefoy" />
<meta name="twitter:creator" content="@phdefoy" />
<meta name="twitter:title" content={metaTitle} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={imageURL} />
<meta name="twitter:image:alt" content={altText} />

<!-- Schema.org WebSite (global) -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Philippe de Foy",
  "url": "https://phdefoy.com",
  "description": SITE_DESCRIPTION,
  "inLanguage": "fr-FR",
  "publisher": {
    "@type": "Person",
    "name": "Philippe de Foy",
    "url": "https://phdefoy.com/philippe-de-foy/"
  }
})} />
