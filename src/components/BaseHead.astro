---
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import blogPlaceholder from '../assets/blog-placeholder-about.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
  title?: string;
  description?: string;
  image?: ImageMetadata | string;
  ogType?: string;
  imageAlt?: string;
}

const {
  title:        metaTitle       = SITE_TITLE,
  description:  metaDescription = '',
  image         = blogPlaceholder,
  ogType        = 'website',
  imageAlt,
} = Astro.props as Props;

const imagePath = typeof image === 'string' ? image : image.src;

// Base sûre même en dev (si Astro.site n'est pas défini)
const baseForUrls = Astro.site ?? Astro.url;

// Toujours forcer un slash final
let pathname = Astro.url.pathname;
if (!pathname.endsWith('/')) {
  pathname += '/';
}

// URLs absolues
const canonicalURL = new URL(pathname, baseForUrls).toString();
const imageURL = new URL(imagePath, baseForUrls).toString();

// Texte alternatif dynamique
const altText = imageAlt ?? `Couverture : ${metaTitle}`;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', baseForUrls)} />
<meta name="generator" content={Astro.generator} />

<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={metaDescription} />

<!-- ✅ Canonical -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph -->
<meta property="og:type" content={ogType} />
<meta property="og:title" content={metaTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:alt" content={altText} />
<!-- ✅ URL OG -->
<meta property="og:url" content={canonicalURL} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={metaTitle} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={imageURL} />
<meta name="twitter:image:alt" content={altText} />
