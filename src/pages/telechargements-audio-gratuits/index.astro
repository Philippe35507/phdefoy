        transform: translateY(-2px);
        box-shadow: 0 12px 20px -5px rgba(0, 0, 0, 0.3);
        filter: brightness(1.1);
        outline: none;
      }

      .download-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
      }

      .download-btn.loading {
        position: relative;
        opacity: 0.9;
      }

