        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 3rem;
        line-height: 1.7;
      }

      .intro p {
        color: #cbd5e1;
        font-size: 1.1rem;
        margin-bottom: 1rem;
      }

      .intro p:last-child {
        margin-bottom: 0;
      }

      .language-section {
        margin-bottom: 3rem;
      }

      .language-section h2 {
        font-size: 1.5rem;
        color: #60a5fa;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      .flag {
        font-size: 1.75rem;
      }

      .level-block {
        background: rgba(30, 41, 59, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 1.5rem 2rem;
      }

      .level-block h3 {
        font-size: 1.2rem;
        color: #f1f5f9;
        margin-bottom: 1rem;
      }

      .level-block ul {
        color: #cbd5e1;
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
      }

      .level-block li {
        margin-bottom: 0.5rem;
      }

      .level-block strong {
        color: #f1f5f9;
      }

      .download-card {
        background: rgba(30, 41, 59, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 1.5rem;
        margin: 1.5rem 0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        max-width: 300px;
      }

      .download-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--level-color), var(--level-color-light));
        opacity: 0.8;
      }

      .level-a1 {
        --level-color: #3b82f6;
        --level-color-light: #60a5fa;
      }

      .download-card:hover {
        transform: translateY(-4px);
        background: rgba(30, 41, 59, 0.8);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 12px 20px -5px rgba(0, 0, 0, 0.3);
      }

      .card-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      }

      .download-card h4 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #f1f5f9;
        margin: 0;
      }

      .download-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 2rem;
        background: linear-gradient(135deg, var(--level-color), var(--level-color-light));
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: none;
        cursor: pointer;
        min-width: 140px;
      }

      .download-btn:hover,
      .download-btn:focus {
        transform: translateY(-2px);
        box-shadow: 0 12px 20px -5px rgba(0, 0, 0, 0.3);
        filter: brightness(1.1);
        outline: none;
      }

      .download-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
      }

      .download-btn.loading {
        position: relative;
        opacity: 0.9;
      }

      .download-btn.loading::after {
        content: "";
        display: inline-block;
        width: 14px;
        height: 14px;
        margin-left: 8px;
        border-radius: 9999px;
        border: 2px solid rgba(255, 255, 255, 0.6);
        border-top-color: #fff;
        animation: spin 0.8s linear infinite;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      .download-container {
        margin-top: 1rem;
        padding: 1rem;
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 8px;
        display: none;
        animation: fadeIn 0.5s ease-in-out;
        width: 100%;
        text-align: center;
      }

      .download-container.show {
        display: block;
      }

      .download-container a {
        color: #10b981;
        text-decoration: none;
        font-weight: 600;
      }

      .download-container a:hover {
        text-decoration: underline;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .cta-link {
        color: #94a3b8;
        margin-top: 1rem;
      }

      .cta-link a {
        color: #60a5fa;
        text-decoration: none;
