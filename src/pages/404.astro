---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="fr">
  <head>
    <BaseHead title={`Page non trouvée | ${SITE_TITLE}`} description="La page que vous recherchez n'existe pas ou a été déplacée." />
  </head>
  <body class="page-bg">
    <Header />
    <main>
      <section class="error-container">
        <div class="error-code">404</div>
        <h1>Page non trouvée</h1>
        <p>La page que vous recherchez n'existe pas ou a été déplacée.</p>

        <div class="error-links">
          <a href="/" class="error-btn primary">Retour à l'accueil</a>
          <a href="/apprendre-le-russe/" class="error-btn">Apprendre le russe</a>
          <a href="/apprendre-espagnol/" class="error-btn">Apprendre l'espagnol</a>
          <a href="/livres/" class="error-btn">Critiques littéraires</a>
        </div>
      </section>
    </main>
    <Footer />

    <style>
      body.page-bg {
        min-height: 100vh;
        background: linear-gradient(135deg, #12141f 0%, #1a1c2b 40%, #23254a 100%);
        margin: 0;
        font-family: var(--font-sans);
      }

      main {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px);
        padding: 2rem;
      }

      .error-container {
        text-align: center;
        max-width: 600px;
        padding: 3rem;
        background: rgba(30, 41, 59, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
      }

      .error-code {
        font-size: clamp(6rem, 20vw, 10rem);
        font-weight: 800;
        background: linear-gradient(135deg, #60a5fa, #34d399);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin-bottom: 1rem;
      }

      h1 {
        font-size: 1.75rem;
        color: #f8fafc;
        margin: 0 0 1rem 0;
      }

      p {
        color: #94a3b8;
        font-size: 1.1rem;
        margin-bottom: 2rem;
      }

      .error-links {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
      }

      .error-btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: #cbd5e1;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
      }

      .error-btn:hover {
        background: rgba(96, 165, 250, 0.2);
        border-color: rgba(96, 165, 250, 0.5);
        color: #f8fafc;
        transform: translateY(-2px);
      }

      .error-btn.primary {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        border-color: transparent;
        color: #ffffff;
      }

      .error-btn.primary:hover {
        background: linear-gradient(135deg, #60a5fa, #3b82f6);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
      }

      @media (max-width: 480px) {
        .error-container {
          padding: 2rem 1.5rem;
        }

        .error-links {
          flex-direction: column;
        }

        .error-btn {
          width: 100%;
          text-align: center;
        }
      }
    </style>
  </body>
</html>
