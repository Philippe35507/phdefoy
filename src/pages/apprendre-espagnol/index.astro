---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE } from '../../consts';
import { Image } from 'astro:assets';
import '../../styles/blog-post.css';
import '../../styles/cookie-banner.css';

import { getCollection, type CollectionEntry } from 'astro:content';
import { Content as PillarContent } from '../../content/pillars/espagnol.mdx';

// Import dynamique des images de src/assets/
const allImages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/**/*.{png,jpg,jpeg,webp,avif}',
  { eager: true }
);

function findAssetImage(imagePath: string): ImageMetadata | null {
  if (!imagePath || imagePath.includes('/images/ia/')) return null;
  const filename = imagePath.split('/').pop();
  if (!filename) return null;

  let targetFolder = 'divers';
  if (imagePath.includes('/images/esp/')) targetFolder = 'esp';
  else if (imagePath.includes('/images/russe/')) targetFolder = 'russe';

  const assetPath = `/src/assets/${targetFolder}/${filename}`;
  if (allImages[assetPath]) return allImages[assetPath].default;

  for (const [path, module] of Object.entries(allImages)) {
    if (path.endsWith(`/${filename}`)) return module.default;
  }
  return null;
}

type Post = CollectionEntry<'blog'>;

const cleanId = (id: string) =>
  id.replace(/^.*\//, '').replace(/^\d{4}-\d{2}-\d{2}-/, '');

const hrefFor = (p: Post) => `/${cleanId(p.id)}/`;

const allPosts = await getCollection('blog');

// Filtre les articles tagués "Espagnol" et tri du plus récent au plus ancien
const posts = allPosts
  .filter((p: Post) => p.data.tags?.includes('Espagnol'))
  .sort((a: Post, b: Post) => {
    const da = (a.data as any).pubDate ? new Date((a.data as any).pubDate).getTime() : 0;
    const db = (b.data as any).pubDate ? new Date((b.data as any).pubDate).getTime() : 0;
    return db - da;
  });

const SITE_URL = 'https://phdefoy.com';

// Schema.org ItemList pour la liste d'articles
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Articles pour apprendre l'espagnol",
  "description": "Guide complet pour apprendre l'espagnol : grammaire, vocabulaire, conjugaison.",
  "numberOfItems": posts.length,
  "itemListElement": posts.slice(0, 20).map((p, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "url": `${SITE_URL}${hrefFor(p)}`,
    "name": p.data.displayTitle ?? p.data.title
  }))
};

// Schema.org Course pour la page pillar
const courseSchema = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": "Apprendre l'espagnol",
  "description": "Guide complet pour apprendre l'espagnol : grammaire, vocabulaire, conjugaison. Méthode pour francophones avec audios gratuits.",
  "provider": {
    "@type": "Person",
    "name": "Philippe de Foy",
    "url": `${SITE_URL}/philippe-de-foy/`
  },
  "inLanguage": "fr",
  "teaches": "Langue espagnole",
  "educationalLevel": "Débutant à Intermédiaire",
  "hasCourseInstance": {
    "@type": "CourseInstance",
    "courseMode": "online"
  }
};
---

<html lang="fr">
  <head>
    <BaseHead title={`${SITE_TITLE} — Apprendre l'Espagnol`} description="Guide complet pour apprendre l'espagnol : grammaire, vocabulaire, conjugaison. Méthode pour francophones avec audios gratuits." />
    <!-- Schema.org ItemList -->
    <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
    <!-- Schema.org Course -->
    <script type="application/ld+json" set:html={JSON.stringify(courseSchema)} />
  </head>
  <body class="blog">
    <Header />
    <main>
      <article class="post-content">
        <div class="prose">
          <PillarContent />
        </div>
      </article>

      <section id="articles" class="articles-section">
        <div class="articles-container">
          <h2>Tous les articles - Espagnol</h2>

          {posts.length === 0 ? (
            <p>Aucun article pour le moment.</p>
          ) : (
          <ul class="post-list">
            {posts.map((p: Post) => (
              <li class="post-item">
                <a class="post-link" href={hrefFor(p)}>
                    {p.data.heroImage && (() => {
                      const assetImg = findAssetImage(p.data.heroImage);
                      return assetImg ? (
                        <Image src={assetImg} alt={p.data.heroImageAlt || p.data.title} width={640} height={360} format="avif" loading="lazy" decoding="async" />
                      ) : (
                        <img src={p.data.heroImage} alt={p.data.heroImageAlt || p.data.title} loading="lazy" decoding="async" width="640" height="360" />
                      );
                    })()}
                    <h3>{p.data.displayTitle ?? p.data.title}</h3>
                    <div class="meta">
                      <FormattedDate date={(p.data as any).pubDate} />
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          )}
        </div>
      </section>
    </main>
    <Footer />

    <style>
      .prose :global(h1) {
        font-size: 2.3rem;
        margin-bottom: 1.25rem;
      }

      .articles-section {
        max-width: 900px;
        margin: 2rem auto 0;
        padding: 0 1rem;
      }

      .articles-container {
        background: rgba(30, 41, 59, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
      }

      /* backdrop-filter only on devices that support it well */
      @supports (backdrop-filter: blur(10px)) {
        @media (hover: hover) and (pointer: fine) {
          .articles-container {
            background: rgba(30, 41, 59, 0.4);
            backdrop-filter: blur(10px);
          }
        }
      }

      .articles-section h2 {
        font-size: 1.5rem;
        margin: 0 0 1.5rem 0;
        line-height: 1.3;
        color: #60a5fa;
        text-align: center;
      }

      /* grille responsive : 1 → 2 → 3 colonnes */
      .post-list {
        list-style: none; padding: 0; margin: 0;
        display: grid; gap: 1.25rem;
        grid-template-columns: repeat(1, minmax(0, 1fr));
      }
      @media (min-width: 640px) {
        .post-list { grid-template-columns: repeat(2, minmax(0, 1fr)); }
      }
      @media (min-width: 1024px) {
        .post-list { grid-template-columns: repeat(3, minmax(0, 1fr)); }
      }

      .post-item {
        background: rgba(30, 41, 59, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                    background 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                    border-color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                    box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* backdrop-filter only on desktop */
      @supports (backdrop-filter: blur(10px)) {
        @media (hover: hover) and (pointer: fine) {
          .post-item {
            background: rgba(30, 41, 59, 0.6);
            backdrop-filter: blur(10px);
          }
        }
      }

      .post-item:hover {
        transform: translateY(-4px);
        background: rgba(30, 41, 59, 0.9);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
      }

      /* Désactiver les effets hover sur mobile pour éviter le flickering */
      @media (hover: none) {
        .post-item {
          transition: none;
        }
        .post-item:hover {
          transform: none;
        }
      }

      .post-link {
        display: block;
        text-decoration: none;
        color: #f1f5f9 !important;
      }
      .post-link:visited { color: #f1f5f9 !important; }
      .post-link img { width: 100%; height: auto; display: block; aspect-ratio: 16/9; object-fit: cover; }
      .post-link:hover {
        color: #7dd3fc !important;
      }
      .post-link:hover h3 {
        color: #7dd3fc !important;
      }
      .post-link h3 {
        margin: .6rem 0.75rem .3rem;
        font-size: 0.95rem;
        line-height: 1.4;
        color: #cbd5e1 !important;
      }
      .meta {
        margin: 0 0.75rem 0.75rem;
        color: #94a3b8;
        font-size: .85rem;
      }
    </style>

    <!-- Bandeau cookies (AEPD - Espagne) -->
    <div id="cookie-banner">
      <div class="cookie-content">
        <p>Utilizamos cookies propias y de terceros para analizar nuestros servicios y mejorar su experiencia.
           Consulte nuestro <a href="/aviso-legal-y-privacidad/">Aviso Legal y Privacidad</a> para más información.</p>
        <div class="cookie-buttons">
          <button class="btn-accept">Aceptar todas</button>
          <button class="btn-reject">Rechazar todas</button>
          <button class="btn-settings">Configurar</button>
        </div>
      </div>
    </div>

    <!-- Modal de configuration cookies -->
    <div id="cookie-settings-modal">
      <div class="modal-content">
        <h3>Configuración de cookies</h3>
        <div class="cookie-option">
          <label>
            <strong>Cookies Técnicas</strong> (Obligatorias)
            <input type="checkbox" checked disabled>
          </label>
          <p>Necesarias para el correcto funcionamiento del sitio web.</p>
        </div>
        <div class="cookie-option">
          <label>
            <strong>Cookies de Análisis</strong> (Google Analytics)
            <input type="checkbox" id="analytics-checkbox">
          </label>
          <p>Nos ayudan a entender cómo interactúan los visitantes con la web de forma anónima.</p>
        </div>
        <div class="modal-buttons">
          <button class="btn-save">Guardar configuración</button>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="/scripts/consent.js" defer></script>
  </body>
</html>
