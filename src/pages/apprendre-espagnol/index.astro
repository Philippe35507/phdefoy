---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE } from '../../consts';
import '../../styles/blog-post.css';

import { getCollection, type CollectionEntry } from 'astro:content';
import { Content as PillarContent } from '../../content/pillars/espagnol.md';

type Post = CollectionEntry<'blog'>;

const cleanId = (id: string) =>
  id.replace(/^.*\//, '').replace(/^\d{4}-\d{2}-\d{2}-/, '');

const hrefFor = (p: Post) => `/${cleanId(p.id)}/`;

const allPosts = await getCollection('blog');

// Filtre les articles tagués "Espagnol" et tri du plus récent au plus ancien
const posts = allPosts
  .filter((p: Post) => p.data.tags?.includes('Espagnol'))
  .sort((a: Post, b: Post) => {
    const da = (a.data as any).pubDate ? new Date((a.data as any).pubDate).getTime() : 0;
    const db = (b.data as any).pubDate ? new Date((b.data as any).pubDate).getTime() : 0;
    return db - da;
  });
---

<html lang="fr">
  <head>
    <BaseHead title={`${SITE_TITLE} — Apprendre l'Espagnol`} description="Guide complet pour apprendre l'espagnol : grammaire, vocabulaire, conjugaison. Méthode pour francophones avec audios gratuits." />
  </head>
  <body class="blog">
    <Header />
    <main>
      <article class="post-content">
        <div class="prose">
          <PillarContent />
        </div>
      </article>

      <section class="articles-section">
        <h2>Tous les articles</h2>

      {posts.length === 0 ? (
        <p>Aucun article pour le moment.</p>
      ) : (
      <ul class="post-list">
        {posts.map((p: Post) => (
          <li class="post-item">
            <a class="post-link" href={hrefFor(p)}>
                {p.data.heroImage && (
                  <img
                    src={p.data.heroImage}
                    alt={p.data.heroImageAlt || p.data.title}
                    loading="lazy"
                    decoding="async"
                    width="640"
                    height="360"
                  />
                )}
                <h3>{p.data.title}</h3>
                <div class="meta">
                  <FormattedDate date={(p.data as any).pubDate} />
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
      </section>
    </main>
    <Footer />

    <style>
      .prose :global(h1) {
        font-size: 2.3rem;
        margin-bottom: 1.25rem;
      }

      .articles-section {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: 2rem auto;
        padding: 0 1em;
      }

      .articles-section h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        line-height: 1.3;
      }

      /* grille responsive : 1 → 2 → 3 colonnes */
      .post-list {
        list-style: none; padding: 0; margin: 0;
        display: grid; gap: 1.25rem;
        grid-template-columns: repeat(1, minmax(0, 1fr));
      }
      @media (min-width: 640px) {
        .post-list { grid-template-columns: repeat(2, minmax(0, 1fr)); }
      }
      @media (min-width: 1024px) {
        .post-list { grid-template-columns: repeat(3, minmax(0, 1fr)); }
      }

      .post-item {
        background: rgba(0, 0, 0, 0.04);
        border-radius: 12px;
        overflow: hidden;
        transition: transform .15s ease;
      }
      .post-item:hover { transform: translateY(-3px); }

      .post-link { display: block; text-decoration: none;  color: var(--accent) !important; }
      .post-link:visited { color: var(--accent) !important; }
      .post-link img { width: 100%; height: auto; display: block; aspect-ratio: 16/9; object-fit: cover; }
      .post-link:hover {
      color: var(--accent-dark, var(--accent)) !important; }
      .post-link h3 { margin: .4rem 0.3rem .2rem; font-size: 0.9rem; line-height: 1.35; color: inherit !important; opacity: 1; }
      .meta { margin: 0 0.5rem 0.5rem; color: #3e4043; font-size: .9rem;}
    </style>
  </body>
</html>
